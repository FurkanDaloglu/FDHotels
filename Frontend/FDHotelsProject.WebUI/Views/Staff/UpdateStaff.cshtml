@model UpdateStaffViewModel

@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<h4>Güncellenecek Personel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateStaff">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StaffID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Personel Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Personel Ünvanı</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMedia1" class="control-label">Sosyal Medya 1</label>
                <input asp-for="SocialMedia1" class="form-control" />
                <span asp-validation-for="SocialMedia1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMedia2" class="control-label">Sosyal Medya 2</label>
                <input asp-for="SocialMedia2" class="form-control" />
                <span asp-validation-for="SocialMedia2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMedia3" class="control-label">Sosyal Medya 3</label>
                <input asp-for="SocialMedia3" class="form-control" />
                <span asp-validation-for="SocialMedia3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-outline-dark">Listeye Geri Dön</a>
</div>

